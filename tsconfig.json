{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "outDir": "build",
        "lib": ["es6"],
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true
    },
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "__test__"
    ]
}